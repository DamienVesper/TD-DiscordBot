{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",

        "moduleResolution": "node",       
        "outDir": "./build",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },

    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
