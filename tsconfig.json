{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2018",
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"allowJs": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"lib": [
			"es2018",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	]
}